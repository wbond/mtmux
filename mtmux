#!/bin/bash


if [[ -e ~/.mtmux/$1 ]]; then
    SERVERS=$(cat ~/.mtmux/$1)
    SESSION_NAME=$1
else
    SERVERS="$@"
    SESSION_NAME=mtmux-$(echo "$@" | shasum - | awk '{print $1}')
fi

I=0
SUFFIX=""
while tmux has-session -t "${SESSION_NAME}${SUFFIX}" 2>/dev/null; do
	I=`expr $I + 1`
	SUFFIX="-$I"
done
SESSION_NAME="${SESSION_NAME}${SUFFIX}"

tmux new-session -d -s $SESSION_NAME
shift
for SERVER in $SERVERS; do
    tmux split-window "${SSH_CMD:-ssh} $SERVER"
    tmux select-layout tiled
done
tmux kill-pane -t 0
tmux select-pane -t 0
tmux select-layout tiled
tmux bind-key m set-window-option synchronize-panes
tmux set-window-option synchronize-panes on
tmux attach -t $SESSION_NAME
